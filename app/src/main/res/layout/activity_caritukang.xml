<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    tools:context=".TukangActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARI TUKANG"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cari Tukang Cangkulnya"
        android:textSize="20dp"></TextView>

    <TextView android:text="Pilih Lokasi"
        android:layout_width="120dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TableRow>
        <TextView android:text="Kabupaten/Kota"
            android:id="@+id/kk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp">

        </TextView>

        <EditText
            android:id="@+id/txtcarikota"
            android:layout_width="200dp"
            android:layout_height="wrap_content"></EditText>
    </TableRow>

    <TableRow>
        <TextView android:text="Kecamatan"
            android:id="@+id/txtcarikeca"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp">

        </TextView>

        <EditText
            android:id="@+id/txtcarikecam"
            android:layout_width="200dp"
            android:layout_height="wrap_content"></EditText>
    </TableRow>

    <TableRow>
        <TextView android:text="Kelurahan"
            android:id="@+id/kelu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp">

        </TextView>

        <EditText
            android:id="@+id/txtcarikeluh"
            android:layout_width="200dp"
            android:layout_height="wrap_content"></EditText>
    </TableRow>

    <Button android:text="Cari"
        android:id="@+id/btncari"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="CariData"
        android:layout_marginTop="50dp">
    </Button>
</TableLayout>