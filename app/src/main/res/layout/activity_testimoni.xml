<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTIMONI"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tambahkan Testimoni"
        android:textSize="20dp"></TextView>

    <TableRow>
        <TextView android:text="No.Hp Tukang"
            android:id="@+id/ntng"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold">
        </TextView>

        <EditText android:id="@+id/txtnotkng"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow>
        <TextView android:text="Nama Tukang"
            android:id="@+id/nmtkng"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold">

        </TextView>

        <EditText android:id="@+id/txtnmtkng"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </TableRow>

        <TextView
            android:id="@+id/lblComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtComments"
            android:layout_width="416dp"
            android:layout_height="300px"
            android:textSize="12sp"
            android:layout_alignLeft="@+id/lblComments"
            android:layout_below="@+id/lblComments"/>

    <Button android:text="simpan"
        android:id="@+id/btnsimpantesti"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="Simpantesti"
        android:layout_marginTop="50dp">

    </Button>

</TableLayout>